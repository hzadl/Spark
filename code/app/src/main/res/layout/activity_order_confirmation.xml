<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="easepay.kfc.com.au.easepaykfc.OrderConfirmationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Order # "
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/product_list"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total price:"
        android:id="@+id/pricelabel"
        android:layout_marginTop="173dp"
        android:layout_below="@+id/product_list"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/price"
        android:layout_alignRight="@+id/product_list"
        android:layout_alignEnd="@+id/product_list"
        android:layout_alignTop="@+id/pricelabel"
        android:layout_alignBottom="@+id/pricelabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/next_step"
        android:layout_marginTop="190dp"
        android:onClick="nextBtnClicked"
        android:layout_below="@+id/pricelabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your purchase. Please wait \nand collect per your order #"
        android:id="@+id/textView4"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/pricelabel"
        android:layout_alignLeft="@+id/pricelabel" />
</RelativeLayout>
