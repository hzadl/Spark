<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="easepay.kfc.com.au.easepaykfc.ChooseOrderInputMethodActivity">
    <!--log pic-->
    <Button
        android:layout_width="256px"
        android:layout_height="97px"

        android:id="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="@drawable/kfc_logo"

        />
    <Button
        android:layout_width="500px"
        android:layout_height="200px"
        android:text="Scan Bar Code"
        android:id="@+id/btn_scan_barcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="229dp"
        android:onClick="onScanBarCodeClick"
        android:background="#C21634"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        />

    <Button
        android:layout_width="500px"
        android:layout_height="200px"
        android:text="INPUT ORDER#"
        android:id="@+id/btnTypeOrderNo"
        android:onClick="onTypeOrderNo"
        android:background="#211805"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="209dp" />

</RelativeLayout>
